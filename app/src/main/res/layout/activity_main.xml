<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="309dp"
        android:src="@drawable/icon_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_style_round"
            android:elevation="30dp"
            android:padding="15dp"
            android:text="무물보에게 물어보기"
            android:textColor="@color/grey"
            android:onClick="onClickAsk"


            android:textSize="20sp" />

        <Button
            android:id="@+id/button_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_style_round"
            android:elevation="30dp"
            android:padding="15dp"
            android:text="무물보에게 맡기기"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:onClick="onClickAct"
            />

        <Button
            android:id="@+id/button_please"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_style_round"
            android:elevation="30sp"
            android:padding="15dp"
            android:text="다른 사람에게 부탁하기"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:onClick="onClickPlease"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_setting"
                />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_add_person" />

            <Button
                android:id="@+id/addPersonMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="연락처관리" />
        </LinearLayout>
        <Button
            android:id="@+id/pky_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:text="박근영 test _ 다른 앱 접근" />
        <Button
            android:id="@+id/psh_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:text="박소현 test _ 플로팅뷰" />
    </LinearLayout>
</LinearLayout>